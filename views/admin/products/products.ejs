<div class="d-flex justify-content-between align-items-center gap-4 flex-wrap">
    <h1 class="h6 mb-0 text-uppercase"><%= title %></h1>
    <a href="<%= routes.adminProductsCreate %>" class="btn btn-success d-flex align-items-center">
        <i class="fas fa-plus"></i>
        Ekle
    </a>
</div>
<hr/>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="datatable table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th class="th-image">Resim</th>
                        <th>Adı</th>
                        <th>Fiyat</th>
                        <th>Kısa Açıklama</th>
                        <th class="th-actions">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(product => { %>
                        <tr>
                            <td>
                                <img src="<%= product.image %>" alt="<%= product.name %>">
                            </td>
                            <td><%= product.name %></td>
                            <td><%= product.price %></td>
                            <td><%= product.short_description %></td>
                            <td>
                                <a href="<%= routes.adminProductsEdit.replace(':id', product._id) %>" class="btn btn-sm btn-warning me-2">Düzenle</a>
                                <button 
                                    type="button" 
                                    class="btn-delete btn btn-sm btn-danger"
                                    data-route="<%= routes.adminProductsDelete.replace(':id', product._id) %>"
                                    data-name="<%= product.name %> ürününü silmek istediğinize emin misiniz?"
                                >
                                    Kaldır
                                </button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>