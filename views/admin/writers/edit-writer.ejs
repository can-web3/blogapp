<div class="d-flex justify-content-between align-items-center gap-4 flex-wrap">
    <h1 class="h6 mb-0 text-uppercase"><%= title %></h1>
</div>
<hr/>
<div class="card">
    <div class="card-body">
        <form action="<%= routes.adminWritersShow.replace(':id', writer._id) %>" class="row g-3" method="POST" enctype="multipart/form-data">
            <!-- image -->
            <%- include('../../partials/input.ejs', { 
                type: 'file',
                name: 'image', 
                title: 'Resim', 
                value: old?.image || writer.image, 
            }) %>

            <!-- name -->
            <%- include('../../partials/input.ejs', { 
                name: 'name', 
                title: 'Adı', 
                value: old?.name || writer.name, 
            }) %>

            <!-- birthday -->
            <%- include('../../partials/date-input.ejs', { 
                name: 'birthday', 
                title: 'Doğum Yılı', 
                value: old?.birthday || writer.birthday, 
            }) %>

            <!-- short_description -->
            <%- include('../../partials/input.ejs', { 
                name: 'short_description', 
                title: 'Kısa Açıklama', 
                value: old?.short_description || writer.short_description, 
            }) %>

            <!-- btn submit -->
            <%- include('../../partials/btn-submit.ejs') %>
        </form>
    </div>
</div>